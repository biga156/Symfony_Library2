{% extends 'base.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block body %}
	<div class="jumbotron">
		<div class="container">
			{{ form_start(form) }}
		</div>
		<div class="col">
			<div class="form-group">
				<button class="btn btn-primary">Rechercher</button>
				{{ form_end(form) }}
			</div>

		</div>
	</div>
</div>



    <h1>Livre index</h1>

    <table class="table" id="lstindex">
        <thead>
            <tr>
                
                <th>Titre</th>
                <th>Cote</th>
                <th>Disponibilit√©</th>
                <th>Image</th>
                <th>Auteur</th>
                <th>Special</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
              
                <td> <a href="{{ path('livre_show', {'id': livre.id}) }}">{{ livre.title }}</a></td>
                <td>{{ livre.cote }}</td>
                <td>{{ livre.availability ? 'Yes' : 'No' }}</td>
                <td>{{ livre.picture }}</td>
                <td>{{ livre.authtor }}</td>
                <td>{{ livre.special ? 'Yes' : 'No' }}</td>
                <td>{{ livre.searchable }}</td>
                <td>
                   <a href="{{ path('livre_edit', {'id': livre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        
        </tbody>
    </table>

    
    <a href="{{ path('livre_new') }}">Create new</a>
       {{ knp_pagination_render(livres) }}
        
{% endblock %}

{% block javascripts %}
    <script>
        {% include "filter/_filters.js" %}
    </script>
{% endblock %}