{% extends 'base.html.twig' %}

{% block title %}
  Guinot Bibliothèque - accueil
{% endblock %}

{% block body %}
  <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font:
    18px/1.5 sans-serif; } .example-wrapper code { background: #F5F5F5; padding:
    2px 6px; }
  </style>

  <div class="example-wrapper">
    {% if app.user %}
      <h1>
        Bonjour {{ app.user.firstname }}! ✅
      </h1>
      <p>
        Vous êtes authentifé en tant que  
         {# loop the roles #}
             {% for role in app. user.roles %}
                  {% if role == "ROLE_USER" %}
                       User
                  {% elseif role == "ROLE_ADMIN" %}
                      Administrator
                  {% endif %}
           {% endfor %}
      </p>
    {% else %}
     <h1>
        Bonjour  visiteur! ✅
      </h1>
      <p>
        Vous devriez vous authentifier pour consulter vos informations et vos emprunts en cours
      </p>
    {% endif %}
  </div>
{% endblock %}
