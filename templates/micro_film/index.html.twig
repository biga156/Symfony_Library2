{% extends 'base.html.twig' %}

{% block title %}MicroFilm index
{% endblock %}

{% block body %}

	<div class="jumbotron">
		<div class="container">
			{{ form_start(form) }}
		</div>
		<div class="col">
			<div class="form-group">
				<button class="btn btn-primary">Rechercher</button>
				{{ form_end(form) }}
			</div>

		</div>
	</div>
</div>


<h1>MicroFilm index</h1>

<table class="table" id="lstindex">
	<thead>
		<tr>
			
			<th>Titre</th>
			<th>Cote</th>
			<th>Disponibilit√©</th>
			<th>Image</th>
			<th>Date de creation</th>
			<th>action</th>
		</tr>
	</thead>
	<tbody>
		{% for micro_film in micro_films %}
			<tr>
				
				<td><a href="{{ path('micro_film_show', {'id': micro_film.id}) }}">{{ micro_film.title }}</a></td>
				<td>{{ micro_film.cote }}</td>
				<td>{{ micro_film.availability ? 'Yes' : 'No' }}</td>
				<td>{{ micro_film.picture }}</td>
				<td>{{ micro_film.createdAt ? micro_film.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				<td>
					<a href="{{ path('micro_film_edit', {'id': micro_film.id}) }}">edit</a>
				</td>
			</tr>
		{% else %}
			<tr>
				<td colspan="7">no records found</td>
			</tr>
		{% endfor %}
	</tbody>
</table>

<a href="{{ path('micro_film_new') }}">Create new</a>
       {{ knp_pagination_render(micro_films) }}

{% endblock %}
